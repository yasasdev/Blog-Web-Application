<div class="author">
    <h1 class="author__heading">Hey there, I'm Yasas Lekamge</h1>
    <p class="author__body">Full-stack Developer</p>
</div>

<img src="/img/Course_Image.png" alt="Yasas at Microsoft Sri Lanka" class="course-image" width="981" height="538">

<section class="articles">
    
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">

        <% data.forEach(post => { %>

        <li>
            <a href="/post/<%= post._id %>">
                <span> <%= post.title %> </span>
                <span class="article-list__date"> <%= post.createdAt.toDateString() %> </span>
            </a>
        </li>
            
        <% }); %>
        
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>    

</section>